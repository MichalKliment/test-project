{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@buhler/core/app-layout": ["libs/core/app-layout/src/index.ts"],
      "@buhler/core/common-store": ["libs/core/common-store/src/index.ts"],
      "@buhler/core/configuration": ["libs/core/configuration/src/index.ts"],
      "@buhler/core/ui": ["libs/core/ui/src/index.ts"],
      "@buhler/logs/features": ["libs/logs/features/src/index.ts"],
      "@buhler/logs/ui": ["libs/logs/ui/src/index.ts"],
      "@buhler/machines/features": ["libs/machines/features/src/index.ts"],
      "@buhler/machines/ui": ["libs/machines/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
