  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug invoicing ng app - Docker",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://invoicing.localhost",
      "webRoot": "${workspaceFolder}"
    },
    {
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "name": "Attach invoicing api",
      "port": 9229,
      "remoteRoot": "/usr/src/app",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
